extends layout

block content
  div(style="border: solid 2px teal")
    div(style="margin: 5%")
      h1(style = "font-family: 'Amatic SC', cursive; font-size: 6em") Administrador de gasolineria
      table.stripes
        thead
          tr
            label(for="franq") Franquicia
            input(type="text" name = "franq" style=" border-bottom: solid 2px teal")
          tr
            label(for="nombre") Nombre
            input(type="text" name = "nombre")
          tr
            label(for="precio") Gasolina regular
            input(type="text" name = "precio")
