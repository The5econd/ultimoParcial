            th(style = "font-family: 'Amatic SC', cursive; font-size: 3em") Nombre
            th(style = "font-family: 'Amatic SC', cursive; font-size: 3em") Gasolina regular
            th(style = "font-family: 'Amatic SC', cursive; font-size: 3em") Opciones
        tbody
